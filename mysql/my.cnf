[mysqld]
# Character set (MySQL 8.0 defaults)
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
skip-character-set-client-handshake

# Connection settings
max_connections=1000
max_connect_errors=100000
wait_timeout=28800
interactive_timeout=28800

# Timezone
default-time-zone='+9:00'

# InnoDB settings
innodb_file_per_table=1
innodb_flush_log_at_trx_commit=1
innodb_log_buffer_size=16M
innodb_flush_method=O_DIRECT
innodb_read_io_threads=4
innodb_write_io_threads=4

# Query cache disabled (deprecated in MySQL 8.0)
# Performance schema
performance_schema=ON

# FULLTEXT Tokenization
ft_min_word_len=1
innodb_ft_min_token_size=1

# FULLTEXT-specific buffer size
innodb_ft_cache_size=2147483648
innodb_ft_total_cache_size=1600000000

# Logging
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow.log
long_query_time=2
log_queries_not_using_indexes=0

# Binary logging (useful for replication/recovery)
log_bin=mysql-bin
binlog_format=ROW
binlog_expire_logs_seconds=604800
sync_binlog=1

# General settings
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION
default_authentication_plugin=mysql_native_password

[client]
default-character-set=utf8mb4

[mysql]
default-character-set=utf8mb4
