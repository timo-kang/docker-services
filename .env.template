# Docker Services Environment Configuration
# Copy this file to .env and fill in your values

# Service binding host (127.0.0.1 for local only, 0.0.0.0 for all interfaces)
SERVICE_HOST=127.0.0.1

# MySQL Configuration
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=dev

# PostgreSQL Configuration
POSTGRES_PASSWORD=
POSTGRES_USER=postgres
POSTGRES_DB=dev

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=

# Redis Configuration (password is set in redis.conf, update both if changing)
REDIS_PASSWORD=redis_dev_password

# Workspace path for Ubuntu containers
WORKSPACE_PATH=./workspace
